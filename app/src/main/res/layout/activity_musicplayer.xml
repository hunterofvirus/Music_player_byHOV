<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".MusicplayerActivity">





    <TextView
        android:id="@+id/tvtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text ="some on like you"
        android:text="SOME ONE LIKE YOU"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
       android:textSize="18dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:text="ADELE"
        android:textAllCaps="true"
        android:textColor="@color/white"


        />

    <!-- Ajoutez les autres vues ici -->

    <ImageView
        android:layout_marginTop="19dp"
        android:layout_width="250dp"
        android:layout_height="181dp"
        android:src="@drawable/ic_play"
        android:background="@drawable/background_palyer"
        android:padding="24dp" />


    <SeekBar
        android:id="@+id/seekBarTime"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:backgroundTint="#777777"
        android:thumbTint="#fff"
        android:layout_marginTop="30dp"
        android:progress="100"
        />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
/>
        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:00"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/btnplay"
        android:layout_width="50dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        android:height="50dp"
        android:background="@drawable/play"
        android:backgroundTint="#fff"

        android:textColorHighlight="#C1B3B3"
        android:textColorLink="#EDEAEA" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_height="20dp"
           android:src="@drawable/ic_volume_down"
            app:tint="#fff"
            android:layout_width="52dp"
            android:layout_marginTop="35dp"
            />

    <SeekBar
        android:id="@+id/seekBarVolume"

        android:layout_width="300dp"
        android:layout_height="30dp"
        android:backgroundTint="#777777"
        android:thumbTint="#fff"
        android:layout_marginTop="30dp"
        android:progress="100"
        />

        <ImageView
            android:layout_height="20dp"
            android:src="@drawable/ic_volume_up"
            app:tint="#fff"
            android:layout_width="30dp"
            android:layout_marginTop="35dp"

            />

    </LinearLayout>

</LinearLayout>